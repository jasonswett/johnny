#!/usr/bin/env ruby

require File.expand_path('../../config/environment', __FILE__)

case ARGV[0]
when "index"
  book_collection = BookCollection.new
  book_collection.index!
when "tokens"
  Token.most_frequent_first.limit(30).each do |token|
    puts "#{token.value} (#{token.annotations['frequency']})"
  end
else
  puts "Invalid input"
end
